<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="802px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/ebook_title">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50px">

        <TextView
            android:id="@+id/ebook_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="24px"/>

        <Button
            android:id="@+id/back"
            android:layout_width="50px"
            android:layout_height="50px"
            android:onClick="onBack"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ebook_back"/>

    </RelativeLayout>

    <com.goldingmedia.mvp.view.ui.BookLayout
        android:id="@+id/booklayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.goldingmedia.mvp.view.ui.BookLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/rightLay"
        android:layout_width="222.0px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" >

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/img_cb_all"
            android:layout_width="222px"
            android:layout_height="match_parent"
            />


        <LinearLayout
            android:id="@+id/img_cb_lay"
            android:layout_width="222px"
            android:layout_height="match_parent"
            android:paddingTop="1dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/img_cb1"
                android:layout_width="222px"
                android:layout_height="200px"
                />
            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/img_cb2"
                android:layout_width="222px"
                android:layout_height="200px"
                />

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/img_cb3"
                android:layout_width="222px"
                android:layout_height="200px"
                />


        </LinearLayout>
    </FrameLayout>

</LinearLayout>